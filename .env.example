# ========================================
# Network Configuration
# ========================================

# Private key for deployment (without 0x prefix)
PRIVATE_KEY=your_private_key_here

# Sepolia Testnet RPC URL
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_KEY

# Ethereum Mainnet RPC URL
MAINNET_RPC_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# ========================================
# Contract Verification
# ========================================

# Etherscan API Key
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# ========================================
# Gas & Performance Monitoring
# ========================================

# Enable gas reporting
REPORT_GAS=true

# CoinMarketCap API key for gas price in USD
COINMARKETCAP_API_KEY=your_coinmarketcap_api_key

# Gas configuration
GAS_PRICE=20
GAS_LIMIT=8000000

# ========================================
# Security Configuration
# ========================================

# Pauser role address
PAUSER_ADDRESS=0x0000000000000000000000000000000000000000

# Admin address
ADMIN_ADDRESS=your_admin_address_here

# Multi-sig wallet
MULTISIG_ADDRESS=0x0000000000000000000000000000000000000000

# Time lock delay (seconds)
TIMELOCK_DELAY=172800

# ========================================
# FHE Configuration
# ========================================

# Zama Network
ZAMA_NETWORK_URL=https://devnet.zama.ai
ZAMA_CHAIN_ID=8009

# Oracle addresses
DECRYPTION_ORACLE_ADDRESS=0x0000000000000000000000000000000000000000
KMS_VERIFIER_ADDRESS=0x0000000000000000000000000000000000000000

# ========================================
# Testing Configuration
# ========================================

COVERAGE=true
TEST_TIMEOUT=60000
FORK_URL=https://mainnet.infura.io/v3/YOUR_INFURA_KEY

# ========================================
# CI/CD Configuration
# ========================================

CODECOV_TOKEN=your_codecov_token
NODE_ENV=development

# ========================================
# IPFS Configuration
# ========================================

IPFS_GATEWAY=https://ipfs.io/ipfs/
PINATA_API_KEY=your_pinata_api_key
PINATA_SECRET_KEY=your_pinata_secret_key

# ========================================
# DoS Protection
# ========================================

RATE_LIMIT_MAX=100
RATE_LIMIT_WINDOW=60000
MAX_GAS_PER_TX=5000000
MIN_TX_INTERVAL=1
